@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_WriterPanel.cshtml";
}

<h2>Yeni Başlık Ekle</h2>
@using (Html.BeginForm("AddHeading", "WriterPanel", FormMethod.Post)) 
{ 
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x=>x.HeadingName,new {@class="form-control"})
        @Html.ValidationMessageFor(x=>x.HeadingName)
        <br />
        @Html.Label("Kategori Adı")
        @Html.DropDownListFor(x=>x.CategoryId , (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
        <br />
        <button class="btn btn-success"> Başlığı Ekle </button>
    </div>
}
